extends layout
block content

    .row.banner
        .col-12
            h1= item.name

    .row
        .col-12.col-lg-9
            .row
                .col-12.col-md-6
                    p.rating
                        i.fas.fa-star
                        i.fas.fa-star
                        i.fas.fa-star
                        i.far.fa-star
                        i.far.fa-star  
                    .card.card-primary

                        .card-block
                            img(src=item.image style="height:200px;")
                            h2.card-title Details
                            p.card-text Price: #{item.price}
                            p.card-text Rating: #{item.rating}
                            

                .col-12.col-md-6.location-map
                    .card.card-primary
                        .card-block
                            
    .row
        .col-12
            .card.card-primary.review-card
                .card-block
                    a.btn.btn-primary.float-left(href='/location/'+ item.id + '/reviews/new') Add review
                    h2.card-title Customer reviews
                        each r in item.reviews
                            .row.review
                                .col-12.no-gutters.review-header
                                    span.rating
                                        i.fas.fa-star
                                        i.fas.fa-star
                                        i.fas.fa-star
                                        i.far.fa-star
                                        i.far.fa-star                   
                                    span.review.dash Customer: #{r.review.author}
                                .col-12
                                    span.review.dash Review: #{r.review.reviewText}
        .col-12.col-lg-3
